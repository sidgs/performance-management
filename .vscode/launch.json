{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "epm-api",
            "request": "launch",
            "mainClass": "com.performancemanagement.PerformanceManagementApplication",
            "projectName": "performance-management-api",
            "env": {
                "SPRING_PROFILES_ACTIVE": "local"
            }
        },
        {
            "type": "java",
            "name": "epm-api-demo",
            "request": "launch",
            "mainClass": "com.performancemanagement.PerformanceManagementApplication",
            "projectName": "performance-management-api",
            "env": {
                "SPRING_PROFILES_ACTIVE": "demo"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "epm-ui",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:standalone"
            ],
            "cwd": "${workspaceFolder}/pulse-react-ui",
            "console": "integratedTerminal"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "pulse-epm-agent",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/pulse-agent-ai",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {},
            "envFile": "${workspaceFolder}/pulse-agent-ai/.env",
            "pythonPath": "${workspaceFolder}/pulse-agent-ai/.venv/bin/python"
        }
    ]
}