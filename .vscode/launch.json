    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "epm-api",
            "request": "launch",
            "mainClass": "com.performancemanagement.PerformanceManagementApplication",
            "projectName": "performance-management-api",
            "env": {
                "SPRING_PROFILES_ACTIVE": "local"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "epm-ui",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev:standalone"],
            "cwd": "${workspaceFolder}/react-ui",
            "console": "integratedTerminal"
        },
    ]
}